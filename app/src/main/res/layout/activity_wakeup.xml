<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.WakeupActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:background="@drawable/bg_wakeup_grad"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/WakeupActivity__Stop_Sound_Btn"
            android:background="@drawable/btn_wakeup_action"
            android:clickable="true"
            android:elevation="4dp"
            android:padding="32dp"
            android:orientation="vertical">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="sans-serif-thin"
                android:text="@string/activity_wakeup__btn_stop"
                android:textColor="@color/primaryBackgroundColor"
                android:textSize="24sp"
                android:textStyle="bold" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/WakeupActivity__Hello_View"
            android:visibility="gone"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/WakeupActivity__Hello_Text"
                android:layout_margin="4dp"
                android:shadowColor="#90000000"
                android:shadowDx="8"
                android:shadowDy="8"
                android:shadowRadius="4"
                android:text="@string/activity_wakeup__text_good_morning"
                android:textColor="@color/white"
                android:textSize="32sp"
                android:textStyle="bold" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/WakeupActivity__Hello_View__Date"
                android:layout_margin="4dp"
                android:shadowColor="#90000000"
                android:shadowDy="4"
                android:shadowDx="4"
                android:shadowRadius="2"
                android:text="----/--/-- ---"
                android:textColor="@color/white"
                android:textSize="18sp" />

            <FrameLayout
                android:id="@+id/WakeupActivity__NativeAd_Container"
                android:layout_width="300dp"
                android:layout_height="300dp"
                android:layout_margin="24dp"
                android:background="@color/white"
                android:elevation="4dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/WakeupActivity__Close_Btn"
                android:padding="12dp"
                android:text="@string/activity_wakeup__btn_close"
                android:textAllCaps="false"
                android:textColor="@color/white"
                android:textSize="18sp" />

        </LinearLayout>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>