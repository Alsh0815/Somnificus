<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Somnificus" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="colorControlHighlight">@color/controlHighlightColor</item>
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/primaryColor</item>
        <item name="colorPrimaryVariant">@color/secondaryColorDark</item>
        <item name="colorOnPrimary">@color/primaryBackgroundColor</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/secondaryColorLight</item>
        <item name="colorSecondaryVariant">@color/secondaryColorDark</item>
        <item name="colorOnSecondary">@color/black</item>
        <item name="android:statusBarColor">@color/primaryBackgroundColor</item>
        <item name="android:colorAccent">@color/secondaryActiveColor</item>
        <item name="android:navigationBarColor">@color/primaryBackgroundColor</item>
        <item name="android:textColor">@color/primaryTextColor</item>
        <item name="android:textColorPrimary">@color/secondaryActiveColor</item>
    </style>

    <style name="SomnificusAlertDialogTheme" parent="ThemeOverlay.AppCompat.Dialog.Alert">
        <item name="android:background">@color/secondaryBackgroundColor</item>
        <item name="android:textColor">@color/primaryTextColor</item>
        <item name="android:textColorPrimary">@color/white</item>
    </style>

    <style name="SomnificusDatePickerDialogTheme" parent="ThemeOverlay.MaterialComponents.MaterialCalendar">
        <item name="android:background">@color/secondaryBackgroundColor</item>
        <item name="android:textColor">@color/primaryTextColor</item>
        <item name="android:textColorPrimary">@color/white</item>
        <item name="android:textColorSecondary">@color/primaryTextColor</item>
        <item name="colorPrimary">@color/primaryTextColor</item>
    </style>

    <style name="SomnificusTimePickerDialogTheme" parent="ThemeOverlay.MaterialComponents.TimePicker">
        <item name="colorSurface">@color/secondaryBackgroundColor</item>
        <item name="android:textColorPrimary">@color/black</item>
        <item name="android:textColorSecondary">@color/tertiaryBackgroundColor</item>
        <item name="colorPrimary">@color/primaryColor</item>
        <item name="colorControlActivated">@color/primaryColor</item>
    </style>

</resources>